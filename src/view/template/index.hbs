    <div class="sidebar">
      <h2>{{menu.title}}</h2>
      {{#each menu.items}}
        <a href="#">{{this}}</a>
      {{/each}}
    </div>

    <div class="main">
      <h1>{{header}}</h1>

      <div class="export-ui">
        <label for="export-format">Export Format:</label>
        <select id="export-format">
          <option value="json">JSON</option>
          <option value="yaml">YAML</option>
          <option value="toon">TOON</option>
        </select>
        <button id="copy-dashboard">Copy to Clipboard</button>
        <span class="copy-feedback" id="copy-feedback">Copied!</span>
      </div>

      <div class="section">
        <h2>System Info</h2>
        <div class="system-container">
          <img class="system-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f9/Archlinux-logo-standard-version.svg/2560px-Archlinux-logo-standard-version.svg.png" alt="System Image">
          <div class="system-details">
            {{#each system}}
              <span><label>{{label}}:</label> {{value}}</span>
            {{/each}}
          </div>
        </div>
      </div>

      <div class="section">
        <h2>Open Ports</h2>
        <div class="info-grid">
          {{#each ports}}
            <div>
              <span class="card-title">{{service}}</span>
              <div class="card-detail">Protocol: {{protocol}}<br>Port: {{port}}<br>Status: <span class="badge badge-ok">{{status}}</span></div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h2>Users</h2>
        <div class="horizontal-grid">
          {{#each users}}
            <div>
              <span class="card-title">{{username}}</span>
              <div class="card-detail">UID: {{uid}}<br>GID: {{gid}}<br>Groups: {{groups}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h2>Logged-in Users</h2>
        <div class="info-grid">
          {{#each loggedIn}}
            <div>
              <span class="card-title">{{user}}</span>
              <div class="card-detail">TTY: {{tty}}<br>Login: {{login}}<br>Host: {{host}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h2>Network Interfaces</h2>
        <div class="info-grid">
          {{#each interfaces}}
            <div>
              <span class="card-title">{{iface}}</span>
              <div class="card-detail">IP: {{ip}}<br>Mask: {{mask}}<br>Status: <span class="badge badge-ok">{{status}}</span></div>
            </div>
          {{/each}}
        </div>
      </div>

      <footer>Generated: {{generated}}</footer>
    </div>
